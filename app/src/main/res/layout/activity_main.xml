<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rishabh.myappportfolio.MainActivity"
    android:background="#daeefa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_title"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#610603"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_streamer"
        android:id="@+id/button1"
        android:layout_marginTop="28dp"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo1"
        android:id="@+id/button2"
        android:layout_marginTop="15dp"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_duo2"
        android:id="@+id/button3"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ant_terminator"
        android:id="@+id/button4"
        android:layout_marginTop="15dp"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/materialize"
        android:id="@+id/button5"
        android:layout_marginTop="15dp"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:id="@+id/button6"
        android:layout_marginTop="15dp"
        android:background="#ad2207"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:width="210dp"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="toastDisplay" />
</RelativeLayout>
